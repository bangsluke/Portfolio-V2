---
import { Icon } from 'astro-icon/components';

interface Props {
	class?: string;
}

const { class: className = '' } = Astro.props;
---

<Icon
	name="logo"
	class={`${className} dark:invert dark:brightness-0 dark:contrast-200 hover:text-theme-400 hover:scale-125 transition-all duration-300`}
	aria-hidden="true"
/>
