---
import Layout from '../layouts/LayoutSinglePage.astro';
const pageTitle = 'bangsluke Portfolio';
const description = 'My portfolio site';
const ogimage = {
	url: '/images/siteImage.webp',
	alt: 'bangsluke Portfolio',
};
---

<Layout pageTitle={pageTitle} description={description} ogimage={ogimage}>
	<div class="flex flex-col items-center justify-center h-[60vh] md:h-[72vh]">
		<h1 class="text-4xl font-bold dark:text-white">404 Error...</h1>
		<p class="text-gray-500 dark:text-gray-400">Page not found.</p>
		<!-- Top Back Button -->
		<div class="mt-8 text-center">
			<a
				href="/"
				class="inline-flex items-center text-theme-400 hover:text-theme-300 transition-colors">
				<svg
					class="w-5 h-5 mr-2"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24">
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M15 19l-7-7 7-7"></path>
				</svg>
				Back to Site
			</a>
		</div>
	</div>
</Layout>
