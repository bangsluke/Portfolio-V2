---
import { Icon } from 'astro-icon/components';

interface Props {
	class?: string;
}

const { class: className = '' } = Astro.props;
---

<Icon
	name="logo"
	class={`${className} main-logo h-8 dark:invert dark:brightness-0 dark:contrast-200 hover:scale-125 transition-all duration-300 focus:outline-none focus:ring-0 focus:border-0`}
	aria-hidden="true"
/>
