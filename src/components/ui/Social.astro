---
import { Icon } from 'astro-icon/components';

interface Props {
	iconName: string;
	link: string;
	label?: string;
	platform?: string;
}

const { iconName, link, label = `Link to ${iconName}`, platform } = Astro.props;

// Validate required props
if (!iconName || !link) {
	throw new Error('Social component requires both iconName and link props');
}
---

<a
	class="hover:text-theme-300 hover:scale-150 transition-all"
	target="_blank"
	href={link}
	rel="noopener noreferrer"
	aria-label={label}
	data-umami-event="Social click"
	data-umami-event-platform={platform || iconName}>
	<Icon name={iconName} aria-hidden="true" />
</a>
