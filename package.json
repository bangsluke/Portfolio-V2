{
	"name": "site",
	"type": "module",
	"version": "1.1.0",
	"scripts": {
		"dev": "astro dev",
		"build": "npm run test && npm run update-readme-links && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint . --ext .js,.ts,.jsx,.tsx,.astro",
		"lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx,.astro --fix",
		"lint:css": "stylelint src/styles/global.css",
		"lint:css:fix": "stylelint src/styles/global.css --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"sync": "node scripts/sync.js",
		"sync:dev": "cross-env SYNC_MODE=development AUTO_DEPLOY=false node scripts/sync.js",
		"sync:dev:debug": "cross-env SYNC_MODE=development DEBUG=true node scripts/sync.js",
		"sync:dev:email": "cross-env SYNC_MODE=development EMAIL_NOTIFICATIONS=true node scripts/sync.js",
		"sync:prod": "cross-env SYNC_MODE=production node scripts/sync.js",
		"sync:prod:debug": "cross-env SYNC_MODE=production DEBUG=true node scripts/sync.js",
		"sync:prod:deploy": "cross-env SYNC_MODE=production AUTO_DEPLOY=true node scripts/sync.js",
		"sync:prod:email": "cross-env SYNC_MODE=production EMAIL_NOTIFICATIONS=true node scripts/sync.js",
		"sync:prod:deploy-email": "cross-env SYNC_MODE=production AUTO_DEPLOY=true EMAIL_NOTIFICATIONS=true node scripts/sync.js",
		"sync:mobile": "cross-env SYNC_MODE=mobile node scripts/sync.js",
		"sync:mobile:debug": "cross-env SYNC_MODE=mobile DEBUG=true node scripts/sync.js",
		"process-markdown": "node scripts/process-obsidian-markdown.js",
		"test-email": "cross-env EMAIL_NOTIFICATIONS=true node scripts/test-email.js",
		"update-icons": "node scripts/update-icons.cjs",
		"update-readme-links": "node scripts/update-readme-links.js"
	},
	"dependencies": {
		"@astrojs/preact": "^4.0.8",
		"@astrojs/rss": "^4.0.11",
		"@astrojs/sitemap": "^3.3.0",
		"@egjs/flicking-plugins": "^4.7.1",
		"@egjs/preact-flicking": "^4.14.0",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.8",
		"@types/d3": "^7.4.3",
		"@yeskunall/astro-umami": "^0.0.6",
		"astro": "^5.13.2",
		"astro-icon": "^1.1.5",
		"d3": "^7.9.0",
		"dotenv": "^16.6.1",
		"nodemailer": "^6.9.12",
		"preact": "^10.27.0",
		"preact-github-calendar": "^0.5.10",
		"react": "^19.1.0",
		"tailwindcss": "^4.1.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.31.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@types/jest": "^30.0.0",
		"cross-env": "^7.0.3",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-prettier": "^5.5.1",
		"eslint-plugin-react": "^7.37.5",
		"globals": "^16.3.0",
		"jest": "^30.0.5",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"stylelint": "^16.23.0",
		"stylelint-config-standard": "^39.0.0",
		"stylelint-config-tailwindcss": "^1.0.0",
		"tailwindcss-animated": "^2.0.0",
		"ts-jest": "^29.4.0",
		"typescript-eslint": "^8.37.0"
	}
}
