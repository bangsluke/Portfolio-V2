---
import Layout from '../layouts/Layout.astro';
import BackendTest from '../components/BackendTest';
import GraphQLDebugger from '../components/GraphQLDebugger';
---

<Layout title="GraphQL Debug Page">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">GraphQL Connection Debug</h1>
    
    <div class="space-y-8">
      <div>
        <h2 class="text-2xl font-semibold mb-4">Backend Connection Test</h2>
        <BackendTest client:load />
      </div>
      
      <div>
        <h2 class="text-2xl font-semibold mb-4">Comprehensive GraphQL Debugger</h2>
        <GraphQLDebugger client:load />
      </div>
      
    </div>
  </main>
</Layout> 